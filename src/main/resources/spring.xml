<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.epam.spring.core.entity.Client">
        <constructor-arg type="java.lang.String" value="1"/>
        <constructor-arg type="java.lang.String" value="John Smith"/>
    </bean>

    <bean id="eventLogger" class="com.epam.spring.core.utils.ConsoleEventLogger"/>
    <bean id="fileLogger" class="com.epam.spring.core.utils.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="log.txt"/>
    </bean>
    <bean id="cacheFileEventLogger" class="com.epam.spring.core.utils.CacheFileEventLogger" destroy-method="destroy">
        <constructor-arg index="1" type="java.lang.String" value="cache-log.txt"/>
        <constructor-arg index="0" type="java.lang.Integer" value="3"/>
    </bean>
    <bean id="app" class="com.epam.spring.core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>
    <bean id="event" class="com.epam.spring.core.entity.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date" scope="prototype"/>
        </constructor-arg>
        <constructor-arg ref="dateFormatter"/>
    </bean>
    <bean id="dateFormatter" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

</beans>